<Window x:Class="FactoryTest.ShowMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryTest"
        mc:Ignorable="d"
        Title="警告" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btn_OK" Content="是" HorizontalAlignment="Left" Margin="50,96,0,0" VerticalAlignment="Top" Width="84" Height="55" Click="btn_OK_Click"/>
        <Button x:Name="btn_CANCEL" Content="否" HorizontalAlignment="Left" Margin="180,96,0,0" VerticalAlignment="Top" Width="84" Height="55" Click="btn_CANCEL_Click"/>
        <Button x:Name="btn_ENTER" Content="确定" HorizontalAlignment="Left" Margin="102,169,0,0" VerticalAlignment="Top" Width="102" Height="50" Click="btn_ENTER_Click"/>
        <Label x:Name="label_SHOW" Content="" HorizontalAlignment="Left" Margin="20,39,0,0" VerticalAlignment="Top" Width="250" Height="33" FontSize="16" FontWeight="Bold" Foreground="Red" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
